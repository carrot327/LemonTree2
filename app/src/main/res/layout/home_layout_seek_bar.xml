<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="70dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pinjaman lebih mudah"
            android:textColor="@color/theme_color"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--借多少-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_top_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/shape_bg_yellow_2corner"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingRight="7dp"
            android:paddingBottom="3dp"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:visibility="visible"
            tools:text="9 Hari" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="15dp"
            android:text="@string/text_want_amount"
            android:textColor="@color/text_theme"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <include
                android:id="@+id/indicator_yellow"
                layout="@layout/custom_indicator_oval_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <SeekBar
                android:id="@+id/seek_bar_want_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/indicator_yellow"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:max="2000000"
                android:maxHeight="10dp"
                android:progressDrawable="@drawable/seek_bar_bg_theme"
                android:splitTrack="false"
                android:thumb="@drawable/seek_bar_thumb_theme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seek_bar_want_amount"
                android:layout_alignLeft="@id/seek_bar_want_amount"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:text="Rp.300,000"
                android:textColor="@color/theme_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seek_bar_want_amount"
                android:layout_alignRight="@id/seek_bar_want_amount"
                android:layout_marginTop="4dp"
                android:layout_marginRight="25dp"
                android:text="Rp.2,000,000"
                android:textColor="@color/theme_color" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:text="@string/text_home_tip"
        android:textColor="#FF9800"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>