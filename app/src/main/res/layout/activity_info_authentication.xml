<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/authentication_iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="身份信息认证"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/bg_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#f8f8f8"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:text="请确认以下信息是否正确，可手动修改"
                android:textColor="#979797"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="真实姓名"
                    android:textColor="#404040"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/authentication_et_username"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:hint="扫描自动识别"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/app_divide_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="身份证号"
                    android:textColor="#404040"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/authentication_et_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:hint="扫描自动识别"
                    android:maxLength="18"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/app_divide_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="请上传您的身份证原件，确保照片清晰、四角完整"
                android:textColor="#979797"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/authentication_iv_portrait"
                    android:layout_width="150dp"
                    android:layout_height="93dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:maxWidth="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_renzhen_left"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/authentication_iv_emblem"
                    android:layout_width="150dp"
                    android:layout_height="93dp"
                    android:layout_weight="1"
                    android:maxWidth="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_renzhen_right"
                    android:visibility="visible" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="18dp"
                android:text="拍摄示例"
                android:textColor="#979797"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="28dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_renzheng1"
                        android:layout_width="67dp"
                        android:layout_height="44dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_renzheng_1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/iv_renzheng1"
                        android:layout_alignBottom="@+id/iv_renzheng1"
                        android:src="@drawable/icon_right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_renzheng1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="标准"
                        android:textColor="#404040"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_renzheng2"
                        android:layout_width="67dp"
                        android:layout_height="44dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_renzheng_2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/iv_renzheng2"
                        android:layout_alignBottom="@+id/iv_renzheng2"
                        android:src="@drawable/icon_wrong" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_renzheng2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="边框缺失"
                        android:textColor="#404040"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_renzheng3"
                        android:layout_width="67dp"
                        android:layout_height="44dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_renzheng_3" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/iv_renzheng3"
                        android:layout_alignBottom="@+id/iv_renzheng3"
                        android:src="@drawable/icon_wrong" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_renzheng3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="照片模糊"
                        android:textColor="#404040"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_renzheng4"
                        android:layout_width="67dp"
                        android:layout_height="44dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_renzheng_1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/iv_renzheng4"
                        android:layout_alignBottom="@+id/iv_renzheng4"
                        android:src="@drawable/icon_wrong" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_renzheng4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="闪光强烈"
                        android:textColor="#404040"
                        android:textSize="10sp" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:text="请正对手机，确保光线充足进行人脸识别"
                android:textColor="#979797"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_liveness_avatar"
                android:layout_width="151dp"
                android:layout_height="93dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/liveness_default" />

            <Button
                android:id="@+id/authentication_btn_commit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/slt_btn_corner5_theme_color"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
















