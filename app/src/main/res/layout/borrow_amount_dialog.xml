<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_close" />

    <TextView
        android:id="@+id/tv_period_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        tools:text="1期可借1000元" />

    <TextView
        android:id="@+id/tv_period_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        tools:text="1期可借1000元" />

    <TextView
        android:id="@+id/tv_period_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        tools:text="1期可借1000元" />

    <TextView
        android:id="@+id/tv_period_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        tools:text="1期可借1000元" />

    <TextView
        android:id="@+id/tv_period_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        tools:text="1期可借1000元" />

    <TextView
        android:id="@+id/tv_bottom_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="36dp"
        android:text="借完5期将有机会获得更高额度"
        android:textColor="#F36772"
        android:textSize="14sp" />

</LinearLayout>