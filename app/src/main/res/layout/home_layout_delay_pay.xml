<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="40dp">

    <RelativeLayout
        android:layout_width="277dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_border_theme_color_6">

        <TextView
            android:id="@+id/tv_delay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_theme"
            android:textSize="54sp"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_delay_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="Hari"
            android:textColor="@color/text_theme"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_below_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="Waktu pinjaman di perpanjang"
            android:textColor="@color/text_theme"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_theme_color_6"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                android:text="@string/text_delay_fee"
                android:textColor="@color/text_theme"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_delay_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:textColor="@color/text_theme"
                android:textSize="19sp"
                tools:text="Rp.142,000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_theme_color_6"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                android:text="Tanggal Jatuh Tempo"
                android:textColor="@color/text_theme"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_pay_deadline_delay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:textColor="@color/text_theme"
                android:textSize="19sp"
                tools:text="03-10-2019" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>