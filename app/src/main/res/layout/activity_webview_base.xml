<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_webview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.cocotree.android.ui.widget.WebViewProgressBar
        android:id="@+id/webview_progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:progress_color="@color/theme_color" />

    <LinearLayout
        android:id="@+id/ll_h5_error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/icon_no_network" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前网络不可用\n点击返回上一页"
            android:textColor="@color/Grey400"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>