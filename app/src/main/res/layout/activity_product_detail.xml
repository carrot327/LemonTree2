<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.ProductDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="快来分期" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/app_divide_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#3F3F3F"
            android:textSize="17sp"
            tools:text="快来分期" />

        <ImageView
            android:id="@+id/iv_tag_rid_out"
            android:layout_width="124dp"
            android:layout_height="111dp"
            android:layout_marginLeft="-30dp"
            android:layout_toRightOf="@id/tv_product_name"
            android:src="@drawable/icon_rid_out" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_amount_range_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="额度范围(元)"
            android:textColor="#606060"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_amount_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_amount_range_text"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#606060"
            android:textSize="13sp"
            tools:text="3000～1万" />


        <TextView
            android:id="@+id/tv_time_limit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="期限"
            android:textColor="#606060"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_time_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_limit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="1～3个月"
            android:textColor="#606060"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_month_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="月利率"
            android:textColor="#606060"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_month_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_month_rate_text"
            android:layout_alignStart="@id/tv_month_rate_text"
            android:layout_marginTop="5dp"
            android:text="2%"
            android:textColor="#606060"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/app_divide_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="申请条件"
        android:textColor="#3B3B3B" />

    <TextView
        android:id="@+id/tv_apply_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#606060"
        android:textSize="13sp"
        tools:text="sdfsdf\nsdfsdf\sdf " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa">

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/slt_btn_circle_corner_theme_color"
            android:text="立即申请"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>